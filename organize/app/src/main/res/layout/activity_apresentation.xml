<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_apresentation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.organize4event.organize.ui.activities.ApresentationActivity">

    <RelativeLayout
        android:id="@+id/imgContainer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/img_top_layout_heigth"
        android:background="@drawable/img_apresentation"
        android:padding="@dimen/default_margin_top"
        >

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:tint="@color/colorWhite"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/img_top_layout_heigth"
        android:background="@color/colorBackgroundFilter"
        />

    <RelativeLayout
        android:id="@+id/containerContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imgContainer"
        android:padding="@dimen/default_padding"
        >

        <TextView
            android:id="@+id/txtPresentation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin_top"
            android:text="@string/content_presentation"
            android:textAlignment="center"
            android:textSize="@dimen/default_text_size"
            android:textColor="@color/colorTextDefault"
            android:textAppearance="@style/Theme.Organize.TextAppearance.GothamRounded.Light"
            />

        <TextView
            android:id="@+id/txtTermUse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtPresentation"
            android:layout_marginTop="@dimen/default_margin_top"
            android:text="@string/content_term_use"
            android:textAlignment="center"
            android:textSize="@dimen/text_size_large"
            android:textColor="@color/colorPrimary"
            android:textAppearance="@style/Theme.Organize.TextAppearance.GothamRounded.Book"
            />

        <TextView
            android:id="@+id/txtSite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/default_margin_botton"
            android:text="@string/label_site"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/colorTextDefault"
            android:textAppearance="@style/Theme.Organize.TextAppearance.GothamRounded.Book"
            />

    </RelativeLayout>



</RelativeLayout>
