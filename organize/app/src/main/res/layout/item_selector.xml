<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:id="@+id/rowContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_default"
        >

        <RelativeLayout
            android:id="@+id/contentFields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtItemName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/imgAccept"
                android:layout_marginRight="@dimen/margin_default"
                android:layout_centerVertical="true"
                android:textSize="@dimen/text_size_default"
                android:textColor="@color/colorTextDefault"
                android:textAppearance="@style/Theme.Organize.TextAppearance.GothamRounded.Book"
                />

            <ImageView
                android:id="@+id/imgAccept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_done"
                android:tint="@color/colorDivider"
                android:visibility="gone"
                />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/rowContent"
        android:background="@color/colorDivider"
        />

</RelativeLayout>